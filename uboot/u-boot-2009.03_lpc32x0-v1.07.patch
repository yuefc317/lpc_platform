+	/* Set prescale counter value for a 1mS tick */
+	tbaseclk = sys_get_rate(CLKPWR_PERIPH_CLK);
+	clkdlycnt = (tbaseclk / CONFIG_SYS_HZ);
+	TIMER_CNTR0->pr = clkdlycnt - 1;
+
+	/* Enable the timer */
+	TIMER_CNTR0->tcr = TIMER_CNTR_TCR_EN;
