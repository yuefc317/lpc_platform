+#define PHYHW_DRAM_TYPE_MASK       0x3
+/* DRAM types (2 bits) */
+#define PHYHW_DRAM_TYPE_LPSDRAM    0x0
+#define PHYHW_DRAM_TYPE_SDRAM      0x1
+#define PHYHW_DRAM_TYPE_LPDDR      0x2
+#define PHYHW_DRAM_TYPE_DDR        0x3
+/* DRAM configuration mask */
