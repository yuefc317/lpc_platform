+		    UART_FCR_FIFO_EN | UART_FCR_TXFIFO_FLUSH |
+		    UART_FCR_RXFIFO_FLUSH);
+	    tmp32 = puregs->iir_fcr;
+	    tmp32 = puregs->lsr;
+
